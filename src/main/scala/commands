
# Arrancar Zookeeper
sudo bin/zookeeper-server-start.sh config/zookeeper.properties

# Arrancar Kafka
sudo bin/kafka-server-start.sh config/server.properties

# Crear un topic
sudo sh ./bin/kafka-topics.sh --create --zookeeper localhost:2181 --topic facturas_erroneas --replication-factor 1 --partitions 3
sudo sh ./bin/kafka-topics.sh --create --zookeeper localhost:2181 --topic facturas_canceladas --replication-factor 1 --partitions 3
sudo sh ./bin/kafka-topics.sh --create --zookeeper localhost:2181 --topic anomaly_kmeans --replication-factor 1 --partitions 3
sudo sh ./bin/kafka-topics.sh --create --zookeeper localhost:2181 --topic anomaly_bisect --replication-factor 1 --partitions 3

# Listar los topics activos
bin/kafka-topics.sh --list --zookeeper localhost:2181

# Eliminar un topic
sh ./bin/kafka-topics.sh --zookeeper localhost:2181 --delete --topic facturas_canceladas
sh ./bin/kafka-topics.sh --zookeeper localhost:2181 --delete --topic facturas_erroneas
sh ./bin/kafka-topics.sh --zookeeper localhost:2181 --delete --topic anomaly_kmeans
sh ./bin/kafka-topics.sh --zookeeper localhost:2181 --delete --topic anomaly_bisect

# Crear consumer para un topic
bin/kafka-console-consumer.sh --bootstrap-server localhost:9092 --topic facturas_canceladas --from-beginning
bin/kafka-console-consumer.sh --bootstrap-server localhost:9092 --topic facturas_erroneas --from-beginning
bin/kafka-console-consumer.sh --bootstrap-server localhost:9092 --topic anomaly_kmeans --from-beginning
bin/kafka-console-consumer.sh --bootstrap-server localhost:9092 --topic anomaly_bisect --from-beginning





